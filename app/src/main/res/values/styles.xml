<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >
        <item name="overlapAnchor">false</item>
    </style>
    
    <style name="AppTheme1" parent="Theme.AppCompat.Light.NoActionBar">
        <!--<item name="android:windowBackground">@drawable/background_home</item>-->
    </style>

    <style name="AppTheme.NoActionBar2" parent="AppTheme">
        <item name="colorPrimary">#3C8DBC</item>
        <item name="colorPrimaryDark">#3C8DBC</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.toolbar" parent="AppTheme.NoActionBar2" >
        <!--&lt;!&ndash;设置menu中item的图标颜色&ndash;&gt;-->
        <item name="android:textColorSecondary">#ffffff</item>
    </style>

    <!--标题与NavigationIcon的距离-->
    <style name="Toolbar.MyStyle" parent="Base.Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item>
        <item name="titleTextColor">#ffffff</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
    </style>
</resources>
