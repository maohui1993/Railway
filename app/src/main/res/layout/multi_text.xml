<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/multi_text_background"

    android:padding="10dp">

    <TextView
        android:id="@+id/tx_left"
        android:layout_width="0dp"
        android:layout_height="@dimen/teb_height"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:text="头像"
        android:textSize="@dimen/text_body" />

    <TextView
        android:id="@+id/tx_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/header_02" />

    <ImageView
        android:id="@+id/ig_right"
        android:layout_width="@dimen/teb_height"
        android:layout_height="@dimen/teb_height"
        android:scaleType="centerInside"
        android:visibility="gone" />
</LinearLayout>