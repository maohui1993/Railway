<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="?android:buttonBarStyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CCCCCC"
    tools:context="cn.dazhou.railway.splash.functions.setting.function.MessageTipActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:title="消息提醒"></android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"

        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="#ffffff">

        <TextView
            android:id="@+id/tv_ringtone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:padding="5dp"
            android:text="开启铃声"
            android:textSize="@dimen/text_body" />

        <CheckBox
            android:id="@+id/box_ringtone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/tv_ringtone"
            android:layout_alignRight="@id/tv_ringtone"
            android:checked="true" />

        <LinearLayout
            android:id="@+id/divide"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/tv_ringtone"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:background="#c6c4c4"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/tv_shake"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/divide"
            android:padding="5dp"
            android:text="开启震动"
            android:textSize="@dimen/text_body" />

        <CheckBox
            android:id="@+id/box_shake"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/tv_shake"
            android:layout_alignRight="@id/tv_shake"
            android:checked="true" />
    </RelativeLayout>
</RelativeLayout>
