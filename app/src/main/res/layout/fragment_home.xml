<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".splash.functions.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="250dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:scaleType="fitXY"
                android:alpha="1"
                android:src="@drawable/background_home" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/content_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin">

                <!--<ImageView-->
                    <!--android:layout_alignParentBottom="true"-->
                    <!--android:id="@+id/ic_header"-->
                    <!--android:layout_width="75dp"-->
                    <!--android:layout_height="75dp"-->
                    <!--android:src="@drawable/header_01" />-->

                <LinearLayout
                    android:layout_marginBottom="20dp"
                    android:layout_alignParentBottom="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/content_horizontal_margin"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tx_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hooyee" />

                    <TextView
                        android:id="@+id/tx_addr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="大周电子" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="职位：总监" />
                </LinearLayout>
            </RelativeLayout>
        </FrameLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            app:cardBackgroundColor="#ffffff"
            app:cardCornerRadius="5dp"
            app:cardElevation="30dp">

            <LinearLayout
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:text="法律法规："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <com.jude.easyrecyclerview.EasyRecyclerView
                    android:id="@+id/law_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </com.jude.easyrecyclerview.EasyRecyclerView>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">
            <TextView
                android:text="公告："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <com.jude.easyrecyclerview.EasyRecyclerView
                android:id="@+id/notice_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </com.jude.easyrecyclerview.EasyRecyclerView>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
