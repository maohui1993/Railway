<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="cn.dazhou.railway.im.activity.UserInfoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tx_header"
            android:layout_weight="1"
            android:text="头像"
            android:textSize="@dimen/text_body"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:layout_width="0dp"
            android:layout_height="@dimen/teb_height"/>

        <ImageView
            android:id="@+id/ig_header"
            android:layout_width="@dimen/teb_height"
            android:layout_height="@dimen/teb_height"
            android:scaleType="centerInside"
            android:src="@drawable/header_02" />
    </LinearLayout>
</LinearLayout>
